<Window x:Class="WpfApp2.ClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Запись к мастеру" Height="450" Width="600">
    <Grid>
        <!-- Панель выбора мастера и записи -->
        <StackPanel x:Name="BookingPanel" Visibility="Visible" Margin="10">
            <TextBlock Text="Выберите мастера" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <ListBox x:Name="MastersListBox" Width="300" Height="200"
                     SelectionChanged="OnMasterSelected" ScrollViewer.VerticalScrollBarVisibility="Auto"/>

            <TextBlock Text="Дата" Margin="0,10,0,0"/>
            <DatePicker x:Name="DatePicker" Margin="0,0,0,10"/>
            <TextBlock Text="Время" Margin="0,10,0,0"/>
            <TextBox x:Name="TimeTextBox" InputScope="Time" Margin="0,0,0,10"/>

            <TextBlock Text="Услуга" Margin="0,10,0,0"/>
            <TextBox x:Name="ServiceTextBox" Margin="0,0,0,20"/>

            <Button Content="Оставить заявку" Click="OnSubmitBooking" Width="150"/>
            <Button Content="Мое расписание" Click="OnScheduleClick" Width="150" Margin="0,10,0,0"/>
        </StackPanel>

        <!-- Панель расписания -->
        <StackPanel x:Name="SchedulePanel" Visibility="Collapsed" Margin="10">
            <TextBlock Text="Мое расписание" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <ListBox x:Name="ClientScheduleListBox" Height="250"/>
            <Button Content="Назад" Click="OnBackClick" Width="150" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>