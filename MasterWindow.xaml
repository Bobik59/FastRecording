<Window x:Class="WpfApp2.MasterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Окно мастера" Height="500" Width="800">
    <Grid>
        <!-- Левая панель -->
        <Grid Background="White" Width="200" HorizontalAlignment="Left">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Name="EditDataButton" Content="Изменение своих данных" Height="50" Click="EditDataButton_Click"/>
            <!-- Кнопка для отображения расписания -->
            <Button Name="ScheduleButton" Content="Расписание" Height="50" Grid.Row="1" Click="ScheduleButton_Click"/>
            <Button Name="RequestsButton" Content="Заявки" Height="50" Grid.Row="2" Click="RequestsButton_Click"/>
        </Grid>

        <!-- Основное окно -->
        <Grid Margin="200,0,0,0">
            <!-- Логин мастера справа сверху -->
            <TextBlock Name="LoginTextBlock" FontSize="16" FontWeight="Bold"
                       HorizontalAlignment="Right" VerticalAlignment="Top"
                       Margin="0,10,10,0" />

            <!-- Окно редактирования данных -->
            <StackPanel Name="EditPanel" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="FIO:"/>
                <TextBox Name="FIOTextBox" Width="200"/>
                <TextBlock Text="Description:"/>
                <TextBox Name="DescriptionTextBox" Width="200" Height="100"/>
                <Button Name="SaveButton" Content="Сохранить" Click="SaveButton_Click" Margin="0,10,0,0"/>
            </StackPanel>

            <!-- Панель для загрузки заявок -->
            <StackPanel x:Name="RequestsPanel" Visibility="Collapsed" Margin="10">
                <Button Content="Загрузить заявки" Click="RequestsButton_Click" Width="200" Margin="10"/>
                <ListBox x:Name="RequestsListBox" SelectionChanged="RequestsListBox_SelectionChanged"
                         DisplayMemberPath="Service" Height="200" Margin="10"/>
            </StackPanel>

            <!-- Панель подтверждения заявки -->
            <StackPanel x:Name="ApprovalPanel" Visibility="Collapsed" Margin="10">
                <TextBlock Text="Детали заявки:" FontWeight="Bold"/>
                <TextBlock x:Name="ClientNameText"/>
                <TextBlock x:Name="ServiceText"/>
                <TextBlock x:Name="BookingTimeText"/>
                <TextBlock Text="Введите цену:" Margin="0,5,0,5"/>
                <TextBox x:Name="PriceTextBox" Margin="0,5,0,5"/>
                <Button Content="Подтвердить" Click="ConfirmButton_Click"/>
                <Button Content="Отклонить" Click="RejectButton_Click" Background="Red"/>
            </StackPanel>

            <!-- Новая панель для отображения расписания -->
            <StackPanel x:Name="SchedulePanel" Visibility="Collapsed" Margin="10">
                <TextBlock Text="Ваше расписание:" FontWeight="Bold" Margin="0,0,0,10"/>
                <ListBox x:Name="ScheduleListBox" Height="200" Margin="10"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
