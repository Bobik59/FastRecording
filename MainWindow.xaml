<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Booking System" Height="400" Width="350"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- Стиль для TextBox -->
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#FF5C9CCC"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>

        <!-- Стиль для PasswordBox -->
        <Style x:Key="PasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#FF5C9CCC"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>

        <!-- Стиль для ComboBox -->
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Стиль для Button -->
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#FF5C9CCC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF3B7BBF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <!-- Фон окна с плавным переходом от голубоватого к белому -->
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#FFB3D4FC" Offset="0.0"/>
                <GradientStop Color="White" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Центральная панель с белой заливкой, скруглёнными углами и тенью -->
        <Border CornerRadius="10" Background="White" Padding="20" Margin="20">
            <Border.Effect>
                <DropShadowEffect Color="Gray" ShadowDepth="5" BlurRadius="10" Opacity="0.5"/>
            </Border.Effect>
            <StackPanel>
                <!-- Поле для логина -->
                <TextBox x:Name="LoginTextBox" Style="{StaticResource TextBoxStyle}" 
                         ToolTip="Enter your login" />

                <!-- Поле для пароля с подсказкой -->
                <PasswordBox x:Name="PasswordBox" Style="{StaticResource PasswordBoxStyle}">
                    <PasswordBox.ToolTip>
                        <ToolTip Content="Enter your password" />
                    </PasswordBox.ToolTip>
                </PasswordBox>

                <!-- Выбор роли (Client/Master) -->
                <ComboBox x:Name="RoleComboBox" Style="{StaticResource ComboBoxStyle}">
                    <ComboBoxItem Content="Client"/>
                    <ComboBoxItem Content="Master"/>
                </ComboBox>

                <!-- Кнопка входа/регистрации -->
                <Button Content="Login/Register" Style="{StaticResource ButtonStyle}"
                        Click="OnLoginOrRegisterClick"/>

                <!-- Текст для вывода результатов/сообщений -->
                <TextBlock x:Name="ResultText" Margin="10" FontSize="14" Foreground="Gray"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
