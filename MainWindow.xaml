<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Booking System" Height="300" Width="400">
    <Grid>
        <StackPanel>
            <!-- Поле для логина -->
            <TextBox x:Name="LoginTextBox" Margin="10" Width="300"/>

            <!-- Поле для пароля с ToolTip -->
            <PasswordBox x:Name="PasswordBox" Margin="10" Width="300">
                <PasswordBox.ToolTip>
                    <ToolTip Content="Enter your password" />
                </PasswordBox.ToolTip>
            </PasswordBox>

            <!-- Выбор роли (клиент/мастер) -->
            <ComboBox x:Name="RoleComboBox" Margin="10">
                <ComboBoxItem>Client</ComboBoxItem>
                <ComboBoxItem>Master</ComboBoxItem>
            </ComboBox>

            <!-- Кнопка для входа/регистрации -->
            <Button Content="Login/Register" Width="200" Margin="10" Click="OnLoginOrRegisterClick"/>
            <TextBlock x:Name="ResultText" Margin="10" />
        </StackPanel>
    </Grid>
</Window>