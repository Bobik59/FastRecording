<Window x:Class="WpfApp2.MainWindow"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Registration" Height="350" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Email:" />
            <TextBox x:Name="EmailTextBox" Width="200" />

            <TextBlock Text="Password:" />
            <PasswordBox x:Name="PasswordTextBox" Width="200" />

            <TextBlock Text="Role:" />
            <ComboBox x:Name="RoleComboBox" Width="200" />

            <Button Content="Send Verification Code" Click="SendVerificationCode_Click" Width="200" Margin="5" />

            <TextBlock Text="Verification Code:" />
            <TextBox x:Name="VerificationTextBox" Width="200" />

            <Button Content="Verify Code" Click="VerifyCode_Click" Width="200" Margin="5" />
        </StackPanel>
    </Grid>
</Window>